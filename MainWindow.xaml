<Window x:Class="RolusLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rolus Launcher" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource SurfaceColor}" Padding="30,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                          Text="ROLUS" 
                          FontSize="28" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Version: " 
                              Foreground="{StaticResource TextSecondaryColor}"
                              VerticalAlignment="Center"/>
                    <TextBlock x:Name="CurrentVersionText" 
                              Text="Checking..." 
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock x:Name="StatusText" 
                          Text="Checking for updates..." 
                          FontSize="18" 
                          Margin="0,0,0,10"/>
                <TextBlock x:Name="StatusSubText" 
                          Text="Please wait while we check for the latest version." 
                          Foreground="{StaticResource TextSecondaryColor}"
                          FontSize="14"/>
            </StackPanel>

            <Border Grid.Row="1" 
                   Background="{StaticResource SurfaceColor}" 
                   CornerRadius="12" 
                   Padding="30"
                   VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Select Version:" 
                              FontSize="14" 
                              Margin="0,0,0,10"/>
                    <ComboBox x:Name="VersionComboBox" 
                             SelectionChanged="VersionComboBox_SelectionChanged"
                             Margin="0,0,0,20"
                             Height="35"/>
                    <TextBlock x:Name="GameVersionText" 
                              Text="Latest Version: --" 
                              FontSize="16" 
                              Margin="0,0,0,10"/>
                    <TextBlock x:Name="GameSizeText" 
                              Text="Size: --" 
                              Foreground="{StaticResource TextSecondaryColor}"
                              Margin="0,0,0,20"/>
                    <ProgressBar x:Name="DownloadProgress" 
                                Visibility="Collapsed"
                                Maximum="100" 
                                Value="0"
                                Margin="0,0,0,10"/>
                    <TextBlock x:Name="ProgressText" 
                              Text="" 
                              HorizontalAlignment="Center"
                              Foreground="{StaticResource TextSecondaryColor}"
                              Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="0,30,0,0">
                <Button x:Name="PlayButton" 
                       Content="Play" 
                       Click="PlayButton_Click"
                       IsEnabled="False"
                       Margin="0,0,10,0"
                       MinWidth="120"/>
                <Button x:Name="UpdateButton" 
                       Content="Update" 
                       Click="UpdateButton_Click"
                       IsEnabled="False"
                       MinWidth="120"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" 
               Background="{StaticResource SurfaceColor}" 
               Padding="20,15">
            <TextBlock Text="Â© 2025 NaiouGames. All rights reserved." 
                      Foreground="{StaticResource TextSecondaryColor}"
                      HorizontalAlignment="Center"
                      FontSize="12"/>
        </Border>
    </Grid>
</Window>

